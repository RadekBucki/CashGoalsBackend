extend type Query {
    user: User!
}

extend type Mutation {
    login(email: String!, password: String!): LoginOutput!
    refreshToken(token: String!): LoginOutput!
    createUser(input: CreateUserInput!): User!
    updateUser(input: UserInput!): User!
    activateUser(email: String!, token: String!): Boolean!
    requestPasswordReset(email: String!, resetUrl: String!): Boolean!
    resetPassword(email: String!, token: String!, password: String!): Boolean!
}

type User {
    name: String!
    email: String!
    theme: Theme!
    locale: String!
}

type LoginOutput {
    accessToken: String!
    refreshToken: String!
    user: User!
}

input CreateUserInput {
    name: String!
    email: String!
    password: String!
    theme: Theme!
    activationUrl: String!
}

input UserInput {
    name: String!
    email: String!
    theme: Theme!
    password: String!
}

enum Theme {
    LIGHT
    DARK,
    SYSTEM
}